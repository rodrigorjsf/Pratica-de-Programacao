#include <stdio.h>
#include <stdlib.h>

void calcula_estoque_total (int tab[3][3]){
	int soma;
	int i, j;
	for (i = 0; i <=2; i++)
		for (j = 0; j <= 2; j++) {
			soma += tab [i][j];
			if(j == 2){
			printf ("Armazem %i: \n",i+1);
			printf ("Produto %j: \n",j+1);
			printf ("Estoque total de %i  \n",soma);
			}
			soma = 0;
}


int main() {
	int tab1 [20][50];
	int tab2 [20][50];
	char op;

	for (i = 0; i < 20; i++){
		for (j = 0; j < 50; j++) {
			printf ("Armazem %i: \n",i+1);
			printf ("Digite a quantidade em estoque do Produto %i: ",j+1);
			scanf("%i", &tab1[i][j]);
			printf ("Digite o valor do Produto %i: ",j+1);
			scanf("%i", &tab2[i][j]);
			}
	}
	do{
		system ("cls");
		printf ("1 - Estoque total de cada produto. \n");
		printf ("2 - Quantidade de itens armazenado em cada armazem. \n");
		printf ("3 -  \n");
		printf ("4 -  \n");
		printf ("5 - Sair \n");
		printf ("informe a opcao: ");
		op = getchar (); fflush (stdin);
		switch (op) {
		case '1': calcula_estoque_total(tab1);
			      break;
		case '2': 
				  break;
		case '3': 
				  break;
		case '4': 
				  break;
		case '5': break;
		default: printf ("Opcao invalida \n");
		}
	} while (op != '5');
	

	return 0;
}
